<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTrip">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#8BC34A"
        android:orientation="vertical"
        android:elevation="5dp"
        android:fadingEdgeLength="3dp"
        android:clipToPadding="false"
        android:paddingBottom="3dp">

        <TextView
            android:id="@+id/dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#EEEEEE"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src = "@drawable/transport2"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/transportCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BDT 1200"
                    android:textColor="#EEEEEE"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src = "@drawable/food"/>
                <TextView
                    android:id="@+id/hotelCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BDT 1200"
                    android:textColor="#EEEEEE"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src = "@drawable/spots"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/vistingCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BDT 1200"
                    android:textColor="#EEEEEE"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="#EEEEEE"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDT"
                android:textSize="16dp"
                android:textColor="#EEEEEE"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/totalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120000"
                android:textSize="16dp"
                android:textColor="#EEEEEE"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/nameOfTransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Train Name"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:fadingEdgeLength="3dp"
        android:padding="3dp"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/transportImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src = "@drawable/budgetplane"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="#8BC34A"
            android:orientation="vertical"
            android:elevation="5dp"
            android:fadingEdgeLength="3dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/dtime"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Departure : 12:00"
                android:textSize="16dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/atime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="23:00"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/seatType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat Type"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/seatCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/nameOfHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hotel Name"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/candles3"
        android:elevation="5dp"
        android:fadingEdgeLength="3dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="#8BC34A"
            android:orientation="vertical"
            android:elevation="5dp"
            android:fadingEdgeLength="3dp"
            android:padding="3dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Room Name"
                android:textSize="16dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="xxx"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/roomCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>



</ScrollView>